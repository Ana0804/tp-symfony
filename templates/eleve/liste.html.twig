<!doctype html>
<html lang="fr">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>

    <ul class="nav">
        <li class="nav-item">
        <a class="nav-link" href="/accueil"><i class="bi bi-arrow-counterclockwise"></i> Retour</a>
        </li>
    </ul>

    <div class="container">
        <h1 class="m-4 text-center">Liste de élèves</h1>
        <div class="d-flex flex-wrap justify-content-center">      
            {% for eleve in eleves %}
            <div class="card m-4 text-center d-flex justify-content-center" style="width: 18rem;">
            <div class="card-body">
                <h2 class="card-text">{{eleve.nom}}</h2>
                <h2 class="card-text">{{eleve.prenom}}</h2>
                <p class="card-text">{{eleve.classe.niveau}} {{eleve.classe.nom}}</p>
                <a href="{{ path('app_eleve_details', {id: eleve.id}) }}" class="btn btn-info" style="width: 30px; height:30px"><i class="bi bi-eye d-flex justify-content-center"></i></a>
                <a href="{{ path('app_eleve_suppr', {id: eleve.id}) }}" class="btn btn-danger" style="width: 30px; height:30px"><i class="bi bi-trash d-flex justify-content-center"></i></a>
            </div>
            </div>
        {% endfor %}
        </div>
        <div class="btn d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="{{path('app_eleve_ajout')}}" class="btn btn-primary">Ajouter un élève</a>
        </div>
    </div>

</body>
    


